playing () {
	mpc -h /usr/home/cjg/.mpd/socket | awk 'NR==1 {song = $0} NR==2 {if ($1 == "[playing]") p=1; sub(/.*\//, "")} END {printf("%s %s\n", p?"^c#7C9A8D^ ^c#a89984^":"^c#BF919D^ ^c#a89984^", song)}' 
}

memory (){
	free | awk '(NR == 18) {print $6}'
}

cpu (){	
	vmstat | awk 'NR==3 {print $(NF-2)}'
}

drive (){
	df -h | grep '/$' | awk '{print $5}'
}

cpu_temp (){
	sysctl dev.cpu.0.temperature | sed -e 's|.*: \([0-9]*\).*|\1|'
}

volume (){
	mixer -s vol | grep -Eo '[0-9]+$'
}

print_date (){
	date +"%H:%M"
}

while true
do
xsetroot -name "^b#2B2928^ ^c#a89984^$(playing) ^b#CC5E50^^c#a89984^  $(cpu)% ^b#A9AC43^^c#a89984^  $(memory) ^b#CBA650^^c#a89984^  $(drive) ^b#7C9A8D^^c#a89984^  $(volume)% ^b#BF919D^^c#FFFFFF^  $(print_date) "
	sleep 1
done
